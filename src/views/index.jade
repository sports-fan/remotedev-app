doctype html

html
  head
    meta(charset='UTF-8')
    title RemoteDev
    style.
      body {
        position: fixed;
        overflow: hidden;
        height: 100%;
        width: 100%;
        font-size: 100%;
        margin: 0;
        padding: 0;
        background-color: rgb(53, 59, 70);
        color: #fff;
      }
      #root {
        height: 100%;
      }
      .ReactCodeMirror {
        overflow: auto;
        height: 100%;
      }
      .CodeMirror {
        height: 100% !important;
      }
    link(href='/css/codemirror.css', rel="stylesheet")
    link(href='/css/night.css', rel="stylesheet")
  body
    #root
  script(src=env === 'prod' ? 'js/app.bundle.js' : 'http://localhost:3000/js/app.bundle.js')
